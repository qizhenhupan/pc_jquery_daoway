@import 'mixins.styl'
@import 'public.styl'

body
  background #e5e5e5
  .home-header.fixed
    min-width 1200px
    background rgba(255,255,255,.8)
    position fixed
    z-index 100
    top 0
    left 0
    right 0
    opacity 0
    height 0
    overflow hidden
    box-shadow 0 2px 10px #555
    &.show
      transition .8s
      height 70px
      opacity 1
.home-header
  background #ffffff
  border-bottom 1px solid $gray
  child-to-center()
  .header-box
    height 40px
    display flex
    padding 10px 20px 20px
    justify-content space-between
    .header-logo
      margin-left 10px
      width 280px
    .nav-list
      margin-right 20px
      display flex
      align-items center
      height 100%
      line-height 40px
      .nav-item
        &:hover
          a
            color red
            transition .5s
        a
          color #121212
        font-weight bold
        height 100%
        margin-left 30px
        .nav-link
          height 100%
          &.on
            color $red
      .nav-item.city
        margin 0 50px 0 0
        &:hover
          .switch
            color red;
          .city
            color #121212
        .icon
          margin-right -5px
          margin-top -1px
      .nav-item.shangjia
        .nav-link
          height 30px
          padding 0 5px
          background $red
          line-height 30px
          border-radius 4px
          margin-top 5px
          color #fff
.fuwushang-content
  text-align left
  .shop-name
    child-to-center()
    background #fff
    height 140px
    box-sizing border-box
    margin-top 10px
    padding-top 60px
    lineheight 80px
    .to-center
      overflow hidden
      .name-box
        float left
        text-indent 20px
        .name
          font-size 35px
          font-weight bold
        .gray
          color #888
          margin-left 10px
      .rate-box
        margin-right 20px
        line-height 16px
        float right
        .rate-item
          text-align center
          width 100px
          float left
          position relative
          p
           margin 5px 0
          .num
            font-size 14px
            color red
          .text
            color #555
            font-size 15px
          .space
            position absolute
            width 2px
            height 18px
            right -2px
            top 16px
            background #aaa
  .nav-list
    child-to-center()
    background #121212
    .list
      text-align center
      height 40px
      line-height 40px
      overflow hidden
      .item
        float left
        width 140px
        a
          color #fff
        &.active
          background #888888
  .shop-content
    margin-bottom 50px
    child-to-center()
    .to-center
      box-sizing border-box
      margin-top 20px
      display flex
      justify-content space-between
      .left
        flex 0 960px
        >*
          overflow hidden
          background #fff
          box-sizing border-box
          padding 0 20px
          margin-top 20px
          .title
            height 60px
            line-height 60px
            border-bottom 1px solid #888888
            span
              padding-bottom 18px
              border-bottom 4px solid red
        .service-title
          margin-top 0
          .detail
            height 200px
            display flex
            .img
              flex 0  200px
              img
                width 149px
                height 149px
                border-radius 2px
                margin 25px

            .content
              flex 1
              .project
                margin 35px 0 30px
              .description
                width 500px
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
                font-size 15px
                color #bbb
              .price
                margin-top 35px
                color red;
                .new-price
                  .num
                    font-weight bold
                    font-size 30px
                .old-price
                  color #aaa
                .sellout
                  float right
                  margin-right 20px
                  margin-top 8px
                  color #aaa
        .service-profile
          margin-top 50px
          padding-bottom 10px
          .name
            font-size 20px
            margin 20px 0 30px
          .content
            line-height 30px
            font-size 17px
        .service-comment
          .title
            margin-bottom 0;
          .comment-list
            .comment-item
              padding 20px 0
              display flex
              border-bottom 1px solid #aaaaaa
              .touxiang
                flex 0 40px
                height 40px
                border-radius 4px
              .detail
                flex 1
                margin-left 25px
                .name
                  font-size 18px
                  line-height 26px
                .star-box
                  .stars
                    display inline-block
                    vertical-align middle
                    margin-top -2px
                    img
                      width 10px
                  .time
                    vertical-align middle
                    margin-left 15px
                .comment
                  margin 10px 0 20px
                .address
                  color #aaa
          .pagination
            margin 50px 0
            text-align center
            >a
              display inline-block
              margin 0 5px
              height 30px
              line-height 30px
              padding 0 10px
              border 1px solid #aaa;
              &:hover
                cursor pointer
                background red
                transition color .3s
                color #fff
            a.btn
              color #000
              &:hover
                color #000
                transition none
              &.disabled
                color #eee;
                background #fff;
            a.num.active
              background red;
              color #fff;
      .right
        flex 0 230px
        >*
          width 230px
          height 290px
        .code
          background url("../images/item/fuwushang2_07.jpg") 100%
          canvas
            margin 57.5px 0 0 57.5px
            width 115px
            height 115px
        .app
          margin-top 20px
          background url("../images/service/appbox.jpg") 100%
          img
            margin 50px 0 0 50px
            width 130px
            height 130px

.home-footer
  padding-top 20px
  background #fff
  text-align left
  .title
    font-size 20px
    font-weight bold
  .description-box
    child-to-center()
    .description
      text-align center
      margin 50px auto
      .daowei-promise
        margin-bottom 10px
        font-weight bold
        font-size 30px
        .color
          color red
      .details
        margin 20px 0
        font-size 25px
      .icons
        font-size 22px
        .icon-list
          clearFix()
          .icon-item
            display inline-block
            margin 0 13px
            img
              margin-top -2px
    .city-box
      overflow hidden
      display flex
      .title
        flex 0 1 100px
      .city-list
        flex 1
        overflow hidden
        margin-left 20px

        .city
          font-weight 200
          font-family '微软雅黑'
          width 9.09%
          text-align center
          line-height 30px
          color #aaa
          height 30px
          float left
  .cooperation-box
    child-to-center()
    padding-top 20px
    overflow hidden
    .cooperations
      .cooperation-list
        clearFix()
        .cooperation-item
          float left
          width 120px
          height 60px
          margin-left 15px
          margin-bottom 20px
          line-height 60px
          background #fff
          text-align center
          &:nth-child(9n+1)
            margin-left 0
          img
            width 100px
    .copyrights
      color #999
      font-size 16px
      margin-bottom 20px
      small
        font-size 90%

